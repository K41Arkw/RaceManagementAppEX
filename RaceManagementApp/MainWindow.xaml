<Window x:Class="RaceManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceManagerApp"
        mc:Ignorable="d"
        Title="レースマネジメントアプリ Ver.4.3 (Final)" Height="800" Width="1250">
    <Grid>
        <Grid x:Name="SetupGrid" Background="#AA000000" Panel.ZIndex="10">
            <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="初期設定" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="参加総人数:" FontSize="16" VerticalAlignment="Center"/>
                        <TextBox x:Name="ParticipantCountTextBox" Text="18" Width="60" FontSize="16" Margin="10,0" VerticalContentAlignment="Center" TextAlignment="Center"/>
                        <TextBlock Text="名 (6の倍数)" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button x:Name="StartButton" Content="設定して開始" FontSize="18" FontWeight="Bold" Margin="0,30,0,0" Padding="20,10" Click="StartButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <DockPanel x:Name="MainPanel" Visibility="Collapsed">
            <Button DockPanel.Dock="Bottom" Content="スクリーンショットを保存" HorizontalAlignment="Right" Margin="10" Padding="10,5" Click="SaveScreenshotButton_Click"/>
            <TabControl x:Name="MainTabControl">
                <TabItem Header="1. エントリーと設定">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock DockPanel.Dock="Top" Text="選手エントリー" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="ゼッケン:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox x:Name="BibTextBox" Width="60" VerticalAlignment="Center"/>
                                <TextBlock Text="名前:" VerticalAlignment="Center" Margin="10,5,5,5"/>
                                <TextBox x:Name="NameTextBox" Width="150" VerticalAlignment="Center"/>
                                <Button Content="追加" Margin="10,0,0,0" Padding="15,5" Click="AddDriverButton_Click"/>
                            </StackPanel>
                            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="テンプレート出力" ToolTip="エントリーリスト用のCSVファイルを出力します。" Margin="5" Padding="10,5" Click="ExportTemplateButton_Click"/>
                                <Button Content="リストを読込" ToolTip="CSVファイルからエントリーリストを読み込みます。" Margin="5" Padding="10,5" Click="ImportListButton_Click"/>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding AllDrivers}" AutoGenerateColumns="False" CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ゼッケン" Binding="{Binding Bib}" Width="60"/>
                                    <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTemplateColumn Header="欠席処理" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="欠席にする" Click="AbsentButton_Click" IsEnabled="{Binding !IsAbsent}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAbsent}" Value="True">
                                                <Setter Property="Background" Value="LightGray"/>
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </DockPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="ルール設定" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                            <CheckBox x:Name="PointsRuleCheckBox" Content="ポイントが少ない方が上位 (ゴルフ形式)" Margin="0,5,0,15"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                <TextBlock Text="警告(黄)ペナルティ:" VerticalAlignment="Center"/>
                                <TextBox x:Name="YellowPenaltyTextBox" Text="5" Width="40" Margin="5,0"/>
                                <TextBlock Text="秒" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                                <TextBlock Text="ペナルティ(赤)ペナルティ:" VerticalAlignment="Center"/>
                                <TextBox x:Name="RedPenaltyTextBox" Text="5" Width="40" Margin="5,0"/>
                                <TextBlock Text="秒" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <DockPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock DockPanel.Dock="Top" Text="レース1 ポイント設定" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <DataGrid ItemsSource="{Binding PointSystem1}" AutoGenerateColumns="False" CanUserAddRows="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="順位" Binding="{Binding Position}" Width="*"/>
                                            <DataGridTextColumn Header="ポイント" Binding="{Binding Points}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                                <DockPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock DockPanel.Dock="Top" Text="レース2 ポイント設定" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <DataGrid ItemsSource="{Binding PointSystem2}" AutoGenerateColumns="False" CanUserAddRows="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="順位" Binding="{Binding Position}" Width="*"/>
                                            <DataGridTextColumn Header="ポイント" Binding="{Binding Points}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <TabItem Header="2. 予選">
                    <DockPanel Margin="10">
                        <TextBlock DockPanel.Dock="Top" Text="予選タイム入力" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock DockPanel.Dock="Top" Text="下の表の「予選タイム」欄に、各選手のタイムを秒数で直接入力してください。(例: 85.123)" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        <Button DockPanel.Dock="Bottom" Content="予選結果を確定し、グループ分けを実行" Padding="10" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center" Click="FinalizeQualifyingButton_Click"/>
                        <DataGrid ItemsSource="{Binding AllDrivers}" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAbsent}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="LightGray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ゼッケン" Binding="{Binding Bib}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="予選タイム(秒)" Binding="{Binding QualifyingTime, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </TabItem>

                <TabItem Header="3. レース1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <DockPanel Margin="10">
                            <Button DockPanel.Dock="Bottom" Content="レース1 結果を確定" Padding="10" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center" Click="FinalizeRace1Button_Click"/>
                            <StackPanel Orientation="Vertical">
                                <GroupBox Header="グループ A" Margin="5" FontWeight="Bold" x:Name="GroupAGrid_R1">
                                    <DataGrid ItemsSource="{Binding GroupA}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                                <GroupBox Header="グループ B" Margin="5" FontWeight="Bold" x:Name="GroupBGrid_R1">
                                    <DataGrid ItemsSource="{Binding GroupB}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                                <GroupBox Header="グループ C" Margin="5" FontWeight="Bold" x:Name="GroupCGrid_R1">
                                    <DataGrid ItemsSource="{Binding GroupC}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                            </StackPanel>
                        </DockPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="4. レース2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <DockPanel Margin="10">
                            <Button DockPanel.Dock="Bottom" Content="レース2 結果を確定し、最終順位を計算" Padding="10" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center" Click="FinalizeRace2Button_Click"/>
                            <StackPanel Orientation="Vertical">
                                <GroupBox Header="グループ A (リバースグリッド)" Margin="5" FontWeight="Bold" x:Name="GroupAGrid_R2">
                                    <DataGrid ItemsSource="{Binding GroupA}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                                <GroupBox Header="グループ B (リバースグリッド)" Margin="5" FontWeight="Bold" x:Name="GroupBGrid_R2">
                                    <DataGrid ItemsSource="{Binding GroupB}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                                <GroupBox Header="グループ C (リバースグリッド)" Margin="5" FontWeight="Bold" x:Name="GroupCGrid_R2">
                                    <DataGrid ItemsSource="{Binding GroupC}" AutoGenerateColumns="False" CanUserAddRows="False"/>
                                </GroupBox>
                            </StackPanel>
                        </DockPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="5. 最終結果">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <DockPanel Margin="10">
                            <Button DockPanel.Dock="Bottom" Content="すべての結果をCSVファイルに出力" Padding="10" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center" Click="ExportToCsvButton_Click"/>
                            <StackPanel Orientation="Vertical">
                                <GroupBox Header="グループ A - 最終順位" Margin="5" FontWeight="Bold">
                                    <DataGrid ItemsSource="{Binding GroupA}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="最終順位" Binding="{Binding FinalPositionInGroup}" Width="70"/>
                                            <DataGridTextColumn Header="ゼッケン" Binding="{Binding Bib}" Width="70"/>
                                            <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="R1 Pt" Binding="{Binding Race1Points}" Width="50"/>
                                            <DataGridTextColumn Header="R2 Pt" Binding="{Binding Race2Points}" Width="50"/>
                                            <DataGridTextColumn Header="合計 Pt" Binding="{Binding TotalPoints}" Width="60"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GroupBox Header="グループ B - 最終順位" Margin="5" FontWeight="Bold">
                                    <DataGrid ItemsSource="{Binding GroupB}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="最終順位" Binding="{Binding FinalPositionInGroup}" Width="70"/>
                                            <DataGridTextColumn Header="ゼッケン" Binding="{Binding Bib}" Width="70"/>
                                            <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="R1 Pt" Binding="{Binding Race1Points}" Width="50"/>
                                            <DataGridTextColumn Header="R2 Pt" Binding="{Binding Race2Points}" Width="50"/>
                                            <DataGridTextColumn Header="合計 Pt" Binding="{Binding TotalPoints}" Width="60"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GroupBox Header="グループ C - 最終順位" Margin="5" FontWeight="Bold">
                                    <DataGrid ItemsSource="{Binding GroupC}" AutoGenerateColumns="False" IsReadOnly="True">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="最終順位" Binding="{Binding FinalPositionInGroup}" Width="70"/>
                                            <DataGridTextColumn Header="ゼッケン" Binding="{Binding Bib}" Width="70"/>
                                            <DataGridTextColumn Header="名前" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="R1 Pt" Binding="{Binding Race1Points}" Width="50"/>
                                            <DataGridTextColumn Header="R2 Pt" Binding="{Binding Race2Points}" Width="50"/>
                                            <DataGridTextColumn Header="合計 Pt" Binding="{Binding TotalPoints}" Width="60"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                            </StackPanel>
                        </DockPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>